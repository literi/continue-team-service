# 应用配置
APP_NAME=LLM Gateway
APP_VERSION=0.1.0
DEBUG=false

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=sqlite:///./data/llm_gateway.db
DATABASE_ECHO=false

# Redis配置（可选）
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OAuth2配置
OAUTH2_ISSUER_URL=http://localhost:8080
OAUTH2_JWKS_URL=http://localhost:8080/oauth2/jwks
OAUTH2_USERINFO_URL=http://localhost:8080/api/userinfo
OAUTH2_ALGORITHMS=RS256

# JWT配置
JWT_VERIFY=true
JWT_VERIFY_EXP=true

# 配置缓存
CONFIG_CACHE_TTL=300

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=
